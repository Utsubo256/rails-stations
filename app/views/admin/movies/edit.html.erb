<% flash.each do |message_type, message| %>
  <div class="notifications">
    <div class="<%= message_type %>"><%= message %></div>
  </div>
<% end %>

<h1>映画情報更新</h1>

<%= form_with(model: @movie, url: admin_movie_path, local: true) do |f| %>
  <div class="block">
    <div class="block2">
      <p>映画タイトル</p>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="block2">
      <p>公開年</p>
      <%= f.text_field :year, class: 'form-control' %>
    </div>
    <div class="block2">
      <p>上映中</p>
      <%= f.select :is_showing, [["上映中", true], ["上映予定", false]], include_blank: "選択して下さい", class: 'form-control' %>
    </div>
    <div class="block2">
      <p>概要</p>
      <%= f.text_area :description, class: 'form-control' %>
    </div>
    <div class="block2">
      <p>画像URL</p>
      <%= f.url_field :image_url, class: 'form-control' %>
    </div>
  </div>
  <div class="movie_admin_btn">
    <%= f.button "Close", type: :reset %>
    <%= f.submit "Save" %>
  </div>
  <div>
    <%= link_to "delete", admin_movie_path(@movie.id), method: :delete, data: { confirm: "You sure?" } %>
  </div>
<% end %>
