<h1>映画一覧</h1>

<table class="movie_table">
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>公開年</th>
    <th>概要</th>
    <th>画像URL</th>
    <th>上映中</th>
    <th>登録日時</th>
    <th>更新日時</th>
  </tr>
  <% @movies.each do |movie| %>
    <tr>
      <td class="centered_cell"><%= movie.id %></td>
      <td class="centered_cell"><%= movie.name %></td>
      <td class="centered_cell"><%= movie.year %></td>
      <td><%= movie.description %></td>
      <td><%= link_to movie.image_url, movie.image_url, target: :_blank %></td>
      <% if movie.is_showing == true %>
        <td class="centered_cell">上映中</td>
      <% else %>
        <td class="centered_cell">上映予定</td>
      <% end %>
      <td class="centered_cell"><%= movie.created_at %></td>
      <td class="centered_cell"><%= movie.updated_at %></td>
    </tr>
  <% end %>
</table>
